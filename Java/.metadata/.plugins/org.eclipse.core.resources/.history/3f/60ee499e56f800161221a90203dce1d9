
public class Main {

	public static void main(String[] args) {
		System.out.print(counting("00110"));
	}
	
	static int counting(String s) {
		if(s == null || s.length() < 5 || s.length() > 500000)
			return -1; //-1 indicates that there is an error.
	        
	    int result = 0;
	    int countZero = 0;
	    int countOne = 0;
	    int numberOfChange = 0;
	    char prev = s.charAt(0);
	    for(char current : s.toCharArray())
	    {    
	        if(prev != current)
	        {
	        	numberOfChange ++;
	            if(numberOfChange == 2)
	            {
	            	result += Math.min(countZero, countOne);
	                numberOfChange = 1;
	                if(current == '1')
	                	countOne = 1;
	                else if(current == '0')
	                	countZero = 1;
	            }
	         }
	            
	         if(current == '0')
	        	 countZero ++;
	         else if(current == '1')
	             countOne ++;
	         else
	             return -1;
	                
	         prev = current;
	     }
	     result += Math.min(countZero, countOne);
	     return result;
	}
}
