
public class Main {

	public static void main(String[] args) {
		System.out.print(counting("00110"));
	}
	
	/*
	 * Complete the function below.
	 */

	/*
	 * Complete the function below.
	 */

	/*
	 * Complete the function below.
	 */

	    static int counting(String s) {
	        if(s == null || s.length() < 5 || s.length() > 500000)
	            return -1; //-1 indicates that there is an error.
	        
	        int result = 0;
	        int countZero = 0;
	        int countOne = 0;
	        int numberOfChange = 0;
	        char prev = s.charAt(0);
	        int i = 1;
	        for(char current : s.toCharArray())
	        {    
	            if(prev != current)
	            {
	               if(numberOfChange == 1)
	               {
	                   result += Math.min(countZero, countOne);
	                   numberOfChange = 0;
	                   if(current == '1')
	                       countOne = 1;
	                   else if(current == '0')
	                       countZero = 1;
	               }
	               else
	               {
	                   numberOfChange ++;
	               }
	            }
	            
	            if(current == '0')
	                countZero ++;
	            else if(current == '1')
	                countOne ++;
	            else
	                return -1;
	                
	            prev = current;
	            i ++;
	        }
	        result += Math.min(countZero, countOne);
	        return result;
	    }





}
